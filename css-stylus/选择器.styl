box-shadow()
    -webkit-box-shadow arguments
    -moz-box-shadow arguments
    box-shadow arguments
    html.ie8 &,
    html.ie7 &,
    html.ie6 &
      border 2px solid arguments[length(arguments) - 1]

fonts = '微软雅黑',helvetica,arial,sans-serif

pad(n)
  padding (- n)
  
*
  padding:0
  margin:0
body
  padding:10px
  font:14px/1.4 fonts
  background:#eee
  text-align:center
  .box
    width: 200px
    height: 200px
    display: inline-block
    background:red
    color:#fff
    box-shadow: 2px 3px 15px #eee;
    margin:15px;
  .box.box1:hover
    background:blue
    pad(5px)
